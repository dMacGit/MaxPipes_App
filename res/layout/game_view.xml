<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/itemView" 
    android:paddingLeft="40sp"
    android:paddingRight="40sp"
    android:paddingTop="25sp"
    android:paddingBottom="25sp"
    android:orientation="vertical"
    
    android:background="@drawable/round_rectangle">
    
    <!-- Twitch tv returns boxart images at max size of 272x380 pixels -->
    
    <ImageView 
        android:src="@drawable/custom_layer_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    
    <ImageView
           android:id="@+id/gameImage"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:layout_alignParentTop="true"
           android:layout_marginTop="-25dp"
		   android:background="@color/black"
           android:src="@drawable/ic_launcher" />

       <TextView
           android:id="@+id/gameName"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="23dp"
           android:layout_marginTop="10dp"
           android:layout_toRightOf="@+id/gameImage"
           android:text="CodeLearn Chapter 1"
           android:textColor="@color/white"
           android:background="@color/black"
           android:textSize="16sp" />

       <TextView
           android:id="@+id/gameViews"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignBottom="@+id/gameImage"
           android:layout_alignLeft="@+id/gameName"
           android:textColor="@color/white"
           android:background="@color/black"
           android:text="Description" />

</LinearLayout>